<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cc.app.celebstellar.MainActivity$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blind Coding"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/blind"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/background_dark"
                android:scaleType="centerCrop"
                android:src="@drawable/blind" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Robo Race"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/robot"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/background_dark"

                android:scaleType="fitXY"
                android:src="@drawable/robo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poster Presentation"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/background_dark"

                android:scaleType="fitXY"
                android:src="@drawable/poster1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C and C++ Programming"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ccpp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/background_dark"

                android:scaleType="center"
                android:src="@drawable/ccpp2" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digital Design"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/dd"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/background_dark"

                android:scaleType="center"
                android:src="@drawable/digital" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android App Development"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/aad"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/background_dark"
                android:scaleType="fitXY"
                android:src="@drawable/android" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technical Quiz"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/tecq"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/background_dark"

                android:scaleType="centerCrop"
                android:src="@drawable/tech" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paper Presentation"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/pp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@android:color/background_dark"
                android:scaleType="fitXY"
                android:src="@drawable/paper" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
